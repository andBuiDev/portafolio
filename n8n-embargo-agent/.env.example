# Configuración de Base de Datos
DB_HOST=localhost
DB_PORT=5432
DB_NAME=embargos_db
DB_USER=embargo_user
DB_PASSWORD=your_secure_password_here

# Configuración de n8n
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_WEBHOOK_URL=http://localhost:5678

# Autenticación Básica (Opcional - descomenta para habilitar)
# N8N_BASIC_AUTH_ACTIVE=true
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=secure_admin_password

# Configuración de Datos y Logs
N8N_USER_FOLDER=/home/n8n/.n8n
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# Configuración de Webhook
WEBHOOK_URL=http://localhost:5678/webhook

# Configuración de Seguridad
# CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW_MS=900000

# Configuración de Notificaciones (Opcional)
# NOTIFICATION_WEBHOOK_URL=https://your-notification-endpoint.com/webhook
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Configuración de Monitoreo (Opcional)
# HEALTH_CHECK_ENABLED=true
# METRICS_ENABLED=true

# Configuración de Backup (Opcional)
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30

# Variables de Entorno para Producción
NODE_ENV=development
TZ=America/Bogota